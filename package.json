{
  "name": "email-responder-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:client": "vite --port 5317",
    "dev:server": "cross-env NODE_ENV=development PORT=4410 ts-node-dev --respawn --transpile-only server/src/index.ts",
    "dev": "concurrently \"npm:dev:client\" \"npm:dev:server\"",
    "build": "vite build",
    "build:server": "tsc -p server/tsconfig.json",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest run",
    "test:ui": "vitest"
  },
  "dependencies": {
    "@azure/identity": "^4.4.1",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@tanstack/react-query": "^5.51.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "imapflow": "^1.0.164",
    "mailparser": "^3.7.1",
    "nodemailer": "^6.9.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "jsdom": "^27.0.0",
    "postcss": "^8.5.6",
  "tailwindcss": "^3.4.14",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2",
    "vite": "^5.3.1",
    "vitest": "^3.2.4",
    "@vitejs/plugin-react": "^4.3.0"
  }
}
